<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12 l12 center"><h5>Galerías</h5></div>
  <div class="col s6 l12 center"><%= link_to '+', new_gallery_path, :class=>"btn-floating btn-large waves-effect waves-light indigo" %></div>
</div>

<table class="highlight centered">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= image_tag gallery.image, :class=>"materialboxed", :width=>"250" %></td>
        <td><%= gallery.description %></td>
        <td><%= gallery.company %></td>
        <td><%= link_to 'Ver', gallery %></td>
        <td><%= link_to 'Editar', edit_gallery_path(gallery) %></td>
        <td><%= link_to 'Eliminar', gallery, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
