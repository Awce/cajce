    <%= f.label "Fecha final" %><br>
    <%= f.date_field :dateend, :class=> "datepicker" %>
  </div>
  <div class="field">
    <%= f.label "Servicio" %><br>
    <%= f.text_field :service_id %>
  </div>
  <div class="actions center">
