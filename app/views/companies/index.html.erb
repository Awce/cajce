<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12 l12 center"><h5>Lista de Obras</h5></div>
  <div class="col s6 l12 center"><%= link_to '+', new_company_path, :class=>"btn-floating btn-large waves-effect waves-light indigo" %></div>
</div>

<table class="highlight centered">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Obra</th>
      <th>Progreso</th>
      <th>Fecha de inicio</th>
      <th>Fecha de fin</th>
      <th>Servicio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.work %></td>
        <td><%= company.progress %>%</td>
        <td><%= company.dateini %></td>
        <td><%= company.dateend %></td>
        <td><%= company.service %></td>
        <td><%= link_to 'Ver', company %></td>
        <td><%= link_to 'Editar', edit_company_path(company) %></td>
        <td><%= link_to 'Eliminar', company, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
